rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // App users (clients): each user can only read/write their own document.
    // Required for auth profile step and user repository (getById, set).
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Brands and locations: read-only for signed-in users (home page).
    match /brands/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    match /locations/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Barbers and services: read-only for signed-in users (home, booking).
    match /barbers/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    match /services/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Appointments: signed-in users can create and read their own.
    match /appointments/{appointmentId} {
      allow read: if request.auth != null && resource.data.user_id == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if false;
    }

    // Availability: read for slot display; write when creating a booking (client updates booked_slots).
    match /availability/{document=**} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null;
      allow delete: if false;
    }

    // Deny all other collections by default.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
